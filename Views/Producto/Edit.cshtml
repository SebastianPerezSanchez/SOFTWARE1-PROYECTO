@model SOFTWARE1_PROYECTO.Models.Producto

@{
    ViewData["Title"] = "Edición de Producto";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<div class="container">
<div class="row justify-content-center">
    <div>
        <h1 class="display-4">Editar Producto</h1>
        <div align="right">
        <button  class="btn btn-secondary"  onclick="window.location='@Url.Action("Listar", "Producto")'" >Cancelar</button> 
        </div>
        <form asp-controller="Producto" asp-action="Edit" id="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            
            <div class="form-group">
                <label asp-for="product" class="control-label"></label>
                <input asp-for="product" class="form-control" />
                <span asp-validation-for="product" class="text-danger"></span>
            </div>                  
                   
            <div class="form-group">
                <label asp-for="color" class="control-label"></label>
                <input asp-for="color" class="form-control" />
                <span asp-validation-for="color" class="text-danger"></span>
            </div>               
              <div class="form-group">
                <label asp-for="tallas" class="control-label"></label>
                <input asp-for="tallas" class="form-control" />
                <span asp-validation-for="tallas" class="text-danger"></span>
            </div>      
              <fieldset class="form-group">
                <div class="row">
                    <label asp-for="sexo" class="col-form-label col-sm-2 pt-0"></label>

                  <div class="col-sm-10">
                    <div class="form-check">
                      <label><input  asp-for="sexo" type="radio" name="sexo" value="1">Masculino</label>
                    </div>
                    
                    <div class="form-check">
                      <label><input  asp-for="sexo" type="radio" name="sexo" value="2">Femenino</label>
                    </div>
                  </div>
                </div>
                <span asp-validation-for="sexo" class="text-danger"></span>
            </fieldset>
              <div class="form-group">
                <label asp-for="cantidad" class="control-label"></label>
                <input asp-for="cantidad" class="form-control" />
                <span asp-validation-for="cantidad" class="text-danger"></span>
            </div>      
              <div class="form-group">
                <label asp-for="modelo" class="control-label"></label>
                <input asp-for="modelo" class="form-control" />
                <span asp-validation-for="modelo" class="text-danger"></span>
            </div>      
             
            <div class="form-group" align="center">
                 <button type="submit" class="btn btn-primary">Actualizar</button> 
          

            </div>                

        </form>
            
        <td>@Html.DisplayTextFor(model => model.Response)</td>    
    
    </div>
</div>
</div>

<script>
    document.querySelector('#Editar').addEventListener('submit', function(e) {
      var form = this;
      
      e.preventDefault();
      
      swal({
          title: "¿Está seguro de la acción?",
          text: "Esto cambiará los datos del producto",
          icon: "warning",
          buttons: [
            'Cancelar',
            'Continuar'
          ],
          dangerMode: true,
        }).then(function(isConfirm) {
          if (isConfirm) {
           
              form.submit();
          
          } else {
            swal("Acción cancelada", "El producto no se ha modificado", "error");
          }
        });
    });

    
  </script>
  
  <style>
    .swal-button--confirm {
      background-color: #DD6B55;
    }
  </style>